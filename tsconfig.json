{
    "extends": "@oathompsonjones/ts-config",
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "Bundler",
        "target": "es5",
        "skipLibCheck": true,
        "noEmit": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next",
            },
        ],
        "paths": {
            "app/*": [
                "./src/app/*"
            ],
            "pages/*": [
                "./src/app/(pages)/*"
            ],
            "redirects/*": [
                "./src/app/(redirects)/*"
            ],
            "api/*": [
                "./src/app/api/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "contexts/*": [
                "./src/contexts/*"
            ],
            "hooks/*": [
                "./src/hooks/*"
            ],
            "actions/*": [
                "./src/actions/*"
            ],
            "styles/*": [
                "./src/styles/*"
            ],
            "utils": [
                "./src/utils"
            ],
        },
        "isolatedModules": true,
        "preserveConstEnums": true,
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next",
    ],
}